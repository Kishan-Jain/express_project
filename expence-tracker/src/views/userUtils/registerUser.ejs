<%- include("../partials/header.ejs") %>
<%- include("../partials/navbar.ejs") %>
<%- include("../partials/message.ejs") %>


<form method="post" action="/backend/user/registerUser">
  <div class="mb-2">
    <label for="emailId">Email Id</label>
    <input 
    type="email" 
    placeholder="Enter Email"
    class="form-control"
    id="emailId"
    name="emailId"

    >
  </div>
  <div class="mb-2">
    <label for="fullName">Full Name</label>
    <input 
    type="text" 
    placeholder="Enter FullName"
    class="form-control"
    id="fullName"
    name="fullName"
    >
  </div>
  <div class="mb-2">
    <label for="password">Password</label>
    <input 
    type="password" 
    placeholder="Enter password"
    class="form-control"
    id="password"
    name="password"
    
    >
  </div>
  <div class="mb-2">
    <label for="cityName">CityName</label>
    <input 
    type="text" 
    placeholder="Enter City"
    class="form-control"
    id="cityName"
    name="cityName"

    >
  </div>
  <div class="mb-2">
    <label for="stateName">State Name</label>
    <input 
    type="text" 
    placeholder="Enter State Name"
    class="form-control"
    id="stateName"
    name="stateName"

    >
  </div>
  <div class="mb-2">
    <label for="pincode">Pin code</label>
    <input 
    type="number" 
    placeholder="Enter pincode"
    class="form-control"
    id="pincode"
    name="pincode"

    >
  </div>
  <input type="submit" value="Register">
</form>
<form action="/user/resetUserPassword" method="get">
  <button type="submit">Reset User Password</button>
</form>
<form action="/user/login" method="get">
  <button type="submit">Login User </button>
  </form>


