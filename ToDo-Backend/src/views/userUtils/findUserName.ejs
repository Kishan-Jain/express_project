<h1>Password reset page</h1>
<form action="/api/users/findUserName" method="post">
  <div class="mb-3">
    <label for="email" class="form-label">Email Id</label>
    <input type="email" class="form-control" id="email" placeholder="Enter Email Id" name="emailId"  required/>
  </div>
  <div class="mb-3">
    <label for="fullName" class="form-label">FullName</label>  
    <input type="text" class="form-control" id="fullName" placeholder="Enter Full Name" name="fullName" required/>
  </div>
  <div class="mb-3">
    <label for="gender" class="form-label">Gender</label>
    <select name="gender" id="gender" required>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="transgender">Transgender</option>
    </select>
  </div>
  
  <button type="submit">submit</button>
</form>



