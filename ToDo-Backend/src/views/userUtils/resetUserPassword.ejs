<div class="row w-100">
  <div class="col-7 row m-auto mt-3">
    <div class="col-9 p-3 rounded-4 mt-3 row m-auto bg-white">
      <h1>Password reset page</h1>
      <form action="/api/users/resetPassword/" method="post">

        <div class="mb-3">
          * All field is required <br />
          ** Value for search and varify user
          <div class="row w-100 mt-2">
            <div class="col-4">
              <label for="email" class="form-label">Email Id</label>
            </div>
            <div class="col-7">
              <input
                type="email"
                id="email"
                class=" border-dark rounded"
                placeholder="Enter Email Id"
                name="emailId"
                required
              />
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="row w-100">
            <div class="col-4">
              <label for="userName" class="form-label">UserName</label>
            </div>
            <div class="col-7">
              <input
                type="text"
                class=" border-dark rounded"
                placeholder="Enter UserName"
                id="userName"
                name="userName"
                required
              />
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="row mb-1 w-100">
            <div class="col-4">
              <label for="fullName" class="form-label">FullName</label>
            </div>
            <div class="col-7">
              <input
                type="text"
                class=" border-dark rounded"
                placeholder=" Enter FullName"
                id="fullName"
                name="fullName"
                required
              />
            </div>
          </div>
          *** Value for Set New Password
        </div>
        <div class="mb-3">
          <div class="row w-100">
            <div class="col-4">
              <label for="newPassword" class="form-label">New Password</label>
            </div>
            <div class="col-7">
              <input
                type="password"
                class=" border-dark rounded"
                placeholder="Enter New password"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>
          </div>
        </div>
        <button class="btn btn-success px-2" type="submit">Reset Password</button>
      </form>
    </div>
  </div>
</div>

<%- include("../baseFiles/footer.ejs") %>
